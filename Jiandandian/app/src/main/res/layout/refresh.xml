<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/refresh_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下拉刷新！"
        />
    <TextView
        android:id="@+id/refresh_last_updatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_30dp"
        android:text="上次刷新时间：2016-08-06"/>
    <ImageView
        android:layout_width="@dimen/default_30dp"
        android:layout_height="@dimen/default_30dp"
        android:background="@android:drawable/arrow_down_float"
        android:layout_toLeftOf="@id/refresh_notice"
        />
</RelativeLayout>